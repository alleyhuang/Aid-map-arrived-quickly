.profile-header {
  width: 100vw;
  height: 240rpx;
  background: #00C37D;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  position: relative;
}
.profile-title {
  color: #fff;
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 32rpx;
}
.profile-card {
  width: 90vw;
  margin: -80rpx auto 32rpx auto;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0 32rpx 0;
}
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #f2f2f2;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.nickname {
  font-size: 30rpx;
  color: #222;
  font-weight: 500;
}
.profile-btns {
  width: 90vw;
  margin: 0 auto 32rpx auto;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  padding: 32rpx 0;
}
.profile-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.icon-placeholder {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: #f2f2f2;
  margin-bottom: 8rpx;
}
.logout-section {
  width: 90vw;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.logout-btn {
  width: 100%;
  height: 80rpx;
  border-radius: 40rpx;
  border: 2rpx solid #bbb;
  background: #fff;
  color: #888;
  font-size: 30rpx;
  margin: 32rpx 0 16rpx 0;
}
.version {
  color: #bbb;
  font-size: 26rpx;
  margin-bottom: 32rpx;
} 